---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = false;
---

<Layout
  title="Login - NANA Banana Pro"
  description="Sign in to your NANA Banana Pro account to generate AI images."
>
  <Header />
  <main class="min-h-[calc(100vh-4rem)] flex items-center justify-center px-4 py-16">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <span class="text-5xl mb-4 block">üçå</span>
        <h1 class="text-3xl font-display font-bold text-white mb-2">Welcome Back</h1>
        <p class="text-gray-400">Sign in to start creating amazing images</p>
      </div>

      <div class="bg-brand-mid rounded-2xl p-8 border border-white/10">
        <div id="error-message" class="hidden mb-4 p-3 bg-red-500/10 border border-red-500/30 rounded-lg text-red-400 text-sm"></div>

        <form id="login-form" class="space-y-5">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-300 mb-1.5">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-brand-dark border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-banana-500/50 focus:border-banana-500 transition-colors"
              placeholder="you@example.com"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-300 mb-1.5">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              minlength="8"
              class="w-full px-4 py-3 bg-brand-dark border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-banana-500/50 focus:border-banana-500 transition-colors"
              placeholder="Enter your password"
            />
          </div>

          <button
            type="submit"
            id="submit-btn"
            class="w-full py-3 bg-banana-500 hover:bg-banana-400 text-brand-dark font-semibold rounded-xl transition-all hover:shadow-lg hover:shadow-banana-500/25 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Sign In
          </button>
        </form>

        <p class="text-center text-gray-400 text-sm mt-6">
          Don't have an account?
          <a href="/signup" class="text-banana-400 hover:text-banana-300 font-medium transition-colors">Sign Up</a>
        </p>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  import { signIn } from '../lib/auth-client';

  const form = document.getElementById('login-form') as HTMLFormElement;
  const errorDiv = document.getElementById('error-message') as HTMLDivElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    errorDiv.classList.add('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Signing in...';

    const email = (document.getElementById('email') as HTMLInputElement).value;
    const password = (document.getElementById('password') as HTMLInputElement).value;

    const { error } = await signIn.email({ email, password });

    if (error) {
      errorDiv.textContent = error.message || 'Invalid email or password.';
      errorDiv.classList.remove('hidden');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Sign In';
    } else {
      window.location.href = '/generate';
    }
  });
</script>
